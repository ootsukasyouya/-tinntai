<%= form_with(model: apartment, local: true) do |form| %>
  <% if apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
        <% apartment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :賃料 %>
    <%= form.number_field :rent %>円
  </div>

  <div class="field">
    <%= form.label :住所 %>
    <%= form.text_area :address %>
  </div>

  <div class="field">
    <%= form.label :築年数 %>
    <%= form.number_field :age %>年
  </div>

  <div class="field">
    <%= form.label :備考 %>
    <%= form.text_area :remarks %>
  </div>

  <%= form.fields_for :stations do | station | %>
     <h2>最寄り駅<%= station.index + 1 %></h2>
     <div class="field">
     <%= station.label :name, "駅名" %>
     <%= station.text_field :name %>
     </div>
     <div class="field">
     <%= station.label :route, "路線名" %>
     <%= station.text_field :route %>
     </div>
     <div class="field">
     <%= station.label :time, "徒歩分数" %>
     <%= station.text_field :time %>
     </div>
  <% end %>

    <%= form.submit :物件を登録する%>
<% end %>
